<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtlasERP.Desktop.Views.DashboardPage"
             xmlns:viewmodels="clr-namespace:AtlasERP.Desktop.ViewModels"
             xmlns:ext="clr-namespace:AtlasERP.Desktop.Extensions"
             x:DataType="viewmodels:DashboardPageViewModel"
             Title="{Binding Title}">
    
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label Text="{ext:Localize DashboardTitle}"
                   FontSize="32"
                   FontAttributes="Bold"/>
            
            <Label Text="{ext:Localize DashboardDescription}"
                   FontSize="16"
                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>

            <!-- Charts and Metrics would go here -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15" Margin="0,20,0,0">
                
                <Border Grid.Column="0" Grid.Row="0"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                        Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{ext:Localize SalesOverview}" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="$125,430" FontSize="32" TextColor="{StaticResource Success}"/>
                        <Label FontSize="12" TextColor="{StaticResource Success}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="+12% " />
                                    <Span Text="{Binding Source={ext:Localize FromLastMonth}}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Column="1" Grid.Row="0"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                        Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{ext:Localize InventoryStatus}" FontSize="18" FontAttributes="Bold"/>
                        <Label FontSize="32" TextColor="{StaticResource Info}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="842 " />
                                    <Span Text="{Binding Source={ext:Localize Items}}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label FontSize="12" TextColor="{StaticResource Warning}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="23 " />
                                    <Span Text="{Binding Source={ext:Localize LowStockAlerts}}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Column="0" Grid.Row="1"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                        Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{ext:Localize ActiveEmployees}" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="156" FontSize="32" TextColor="{StaticResource Primary}"/>
                        <Label FontSize="12" TextColor="{StaticResource Success}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="3 " />
                                    <Span Text="{Binding Source={ext:Localize NewThisMonth}}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Column="1" Grid.Row="1"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                        Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{ext:Localize PendingTransactions}" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="38" FontSize="32" TextColor="{StaticResource Warning}"/>
                        <Label Text="{ext:Localize RequiresApproval}" FontSize="12" TextColor="{StaticResource Warning}"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
